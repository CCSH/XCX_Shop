/* pages/confirm_order/index.wxss */

/* 地址 */
.order-address {
  background: white;
  height: 70px;
  width: 100%;
  display: flex;

  margin-bottom: 9px;

  align-items: center;
  justify-content: space-between;
}

.order-address .address-info {
  display: flex;
  flex: 1;
  flex-direction: column;
  font-size: 14px;
  font-weight: bold;
  /* color: black; */
  padding-left: 10px;
  padding-right: 10px;
}

.order-address van-image {
  margin-left: 10px;
}

.address-info .address-other {
  display: flex;
  flex-direction: row;
  font-weight: normal;
  margin-top: 5px;
  line-height: 100%;
  font-size: 12px;
}

.address-other .address-number {
  margin-left: 5px;
}

.order-address van-icon {
  margin-right: 10px;
}

/* 商品 */
.order-good {
  display: flex;
  align-items: center;
  width: 100%;
  height: 100px;
  background: white;
  margin-top: 1px;
}

.order-good .good-content {
  margin-left: 10px;
  margin-right: 10px;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 80px;
  align-items: flex-start;
}

.good-content .good-name {
  height: 38px;
  font-size: 14px;
  -webkit-line-clamp: 2;
}

.good-content .good-key {
  margin-top: 5px;
  margin-bottom: 5px;
  background: rgb(245, 245, 245);
  padding-left: 5px;
  padding-right: 5px;
  padding-top: 3px;
  padding-bottom: 3px;
  color: rgb(209, 209, 209);
  font-size: 8px;
  border-radius: 8.5px;
}

.good-content .good-other {
  display: flex;
  font-size: 10px;
  align-items: flex-end;
  justify-content: space-between;
  width: 100%;
  color: gray;
}

.good-other .good-price {
  display: flex;
  align-items: center;
  color: #69b29c;
  font-size: 28rpx;
}

.good-price .price {
  align-self: flex-end;
  margin-left: 5px;
  font-size: 10px;
  color: black;
  margin-bottom: 1px;
}

/* 内容 */
.order-content {
  display: flex;
  justify-content: space-between;
  margin-bottom: 1px;
  background: white;
  padding-left: 20px;
  padding-right: 20px;
  height: 50px;
  align-items: center;
}

.order-title {
  font-size: 10px;
  font-weight: bold;
  color: rgb(86, 86, 86);
}

.order-name {
  color: rgb(153, 153, 153);
  font-size: 10px;
  margin-left: 10px;
  flex: 1;
  text-align: right;
  display: flex;
  justify-content: flex-end;
}

.order-name van-icon {
  margin-left: 10px;
}

/* 底部 */
.order-bottom {
  height: 80px;
}

/* 底部工具 */
.order-tool {
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  height: 60px;
  background: white;
  padding-left: 20px;
  padding-right: 20px;

  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 12px;
  color: #69b29c;

  border-top: 1px solid rgb(245, 245, 245);
}

.order-tool van-button {
  text-align: center;
  line-height: 36px;
  width: 180rpx;
  height: 36px;
  background: #69b29c;
  color: white;
  font-size: 10px;
  border-radius: 18px;
}

/* 弹窗优惠卷 */
.pop-coupons .coupons-title {
  width: 100%;
  margin-top: 10px;
  font-size: 14px;
  text-align: center;
  margin-bottom: 30px;
}

.pop-coupons .coupons-cell {
  height: 70px;
  margin-bottom: 10px;
}

.coupons-cell .coupons-message {
  display: flex;
}

.coupons-message .coupons-price {
  background: #69b29c;
  line-height: 70px;
  color: white;
  font-weight: 700;
  font-size: 20px;
  width: 100px;
  text-align: center;
}

.coupons-message .coupons-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-top: 5px;
  margin-bottom: 5px;
  margin-left: 10px;
  margin-right: 10px;
}

.coupons-info .coupons-name {
  font-size: 14px;
}

.coupons-info .coupons-time {
  font-size: 10px;
  color: gray;
}
