/* 内容 */
.classify-good .van-grid {
  z-index: 0;
  padding-top: 10px;
  padding-bottom: 10px;
}

.classify-good .van-grid-item__content {
  padding: 0;
  margin: 0;
  border-radius: 20rpx;
  overflow: hidden;
}

.good-info .good-img {
  width: 100%;
  height: 120px;
}

.good-info .good-name {
  padding-left: 20rpx;
  align-self: flex-start;
  height: 40rpx;
  font-size: 26rpx;
}

.good-info .good-price {
  padding-left: 20rpx;
  padding-bottom: 20rpx;
  align-self: flex-start;
  margin-top: 10rpx;
  color: red;
  font-size: 20rpx;
}
