<!-- pages/classify/classify.wxml -->
<wxs src="../../app.wxs" module="app" />
<view class="classify">
  <scroll-view class="classify-sidebar" scroll-y="true" enable-flex>
    <!-- 侧边栏 -->
    <van-sidebar bind:change="onChange" active-key="{{ activeKey }}">
      <block wx:for="{{dataSoure}}" wx:key="index">
        <van-sidebar-item title="{{item.name}}" />
      </block>
    </van-sidebar>
  </scroll-view>
  <scroll-view class="classify-right" scroll-y="true">
    <!-- 筛选 -->
    <view class="classify-screening">
      <block wx:for="{{screeningArr}}" wx:key="index">
        <block wx:if="{{index == screeningIndex}}">
          <van-button class="classify-btn classify-btn-h" bind:tap="onScreening" data-index="{{index}}">
            {{item}}
          </van-button>
        </block>
        <block wx:else>
          <van-button class="classify-btn" bind:tap="onScreening" data-index="{{index}}">
            {{item}}
          </van-button>
        </block>
      </block>
    </view>
    <!-- 商品列表 -->
    <van-grid class="classify-good" column-num="2" gutter="10">
      <!-- 商品信息 -->
      <van-grid-item class="good-info" wx:for="{{dataSoure[activeKey].goods_list}}" wx:key="index" use-slot link-type="navigateTo" url="/pages/good_detail/index?good_id=123123">
        <van-image class="good-img" width="100%" height="100%" src="{{app.toUrl(item.original_img)}}"></van-image>
        <text class="good-name">{{item.goods_name}}</text>
        <text class="good-price">¥ {{item.shop_price}}</text>
      </van-grid-item>
    </van-grid>
  </scroll-view>
</view>