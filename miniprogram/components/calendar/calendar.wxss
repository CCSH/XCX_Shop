.calendar {
  width: 100%;
  text-align: center;
  font-size: 15px;
  background: white;
}

/* 标题 */
.calendar-title {
  text-align: left;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 10px 10px;
}

.calendar-title .title {
  width: 200px;
  text-align: center;
}

.calendar-title .image {
  width: 15px;
  height: 15px;
}

/* 星期 */
.calendar-week {
  display: flex;
  text-align: center;
  border-bottom: 1rpx solid #e0e0e0;
  padding: 10px 5px;
  font-size: 12px;
}

.calendar-week .week {
  flex: 1;
}

/* 日期 */
.calendar-container {
  display: flex;
  flex-wrap: wrap;
  padding: 10px 5px;
}

/* 内容 */
.calendar-container .grid {
  /* 总长度 1/7 */
  width: 14.2857142857143%;
  /* 有边框所有 35 + 2 */
  line-height: 37px;
  height: 37px;
  font-size: 12px;
}

.gray {
  color: #ccc;
}

/* 点击 */
.calendar-container .grid .select {
  background: #65b09e;
  color: #fff;

  border: 1px solid transparent;
  border-radius: 100%;
  width: 35px;
  height: 35px;
  margin: 0 auto;
}

/* 特殊 */
.calendar-container .grid .special {
  border: 1px solid #65b09e;

  border-radius: 100%;
  width: 35px;
  height: 35px;
  margin: 0 auto;
}
