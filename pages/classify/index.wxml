<!-- pages/classify/classify.wxml -->
<van-sidebar class="classify-sidebar" active-key="{{ activeKey }}">
  <block wx:for="{{dataArr}}" wx:key="index">
    <van-sidebar-item title="{{item}}" />
  </block>
</van-sidebar>
<!-- 商品列表 -->
<view class="classify-good">
  <view class="classify-screening">
    <block wx:for="{{screeningArr}}" wx:key="index">
      <block wx:if="{{index == screeningIndex}}">
        <van-button class="classify-btn classify-btn-h center" bind:tap="onScreening" data-index="{{index}}">
          {{item}}
        </van-button>
      </block>
      <block wx:else>
        <van-button class="classify-btn center" bind:tap="onScreening" data-index="{{index}}">
          {{item}}
        </van-button>
      </block>
    </block>
  </view>
  <van-grid class="good-list" column-num="2" gutter="10">
    <!-- 商品信息 -->
    <van-grid-item class="good-info" wx:for="{{goodArr}}" wx:key="index" use-slot link-type="navigateTo" url="/pages/good_detail/index?good_id=123123">
      <van-image class="good-img" width="100%" height="100%" src="{{baseUrl+item.original_img}}"></van-image>
      <text class="good-name">{{item.goods_name}}</text>
      <text class="good-price">¥ {{item.shop_price}}</text>
    </van-grid-item>
  </van-grid>
</view>